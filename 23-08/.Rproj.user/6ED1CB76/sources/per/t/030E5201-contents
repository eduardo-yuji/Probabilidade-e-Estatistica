#####Dados2#####
dados2 = read.csv('BD2.csv',sep=';',dec = ',',header = T)
dados2
(y=dim(dados2))
x=1

imc=function(peso,altura){
  round(peso/(altura)^2,2)
}

dados2$imc = imc(dados2$peso,dados2$altura)
dados2

dados2$imcClass=ifelse(dados2$imc<19,'baixo','normal')
